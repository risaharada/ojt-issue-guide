{
  "manifest_version": 2,
  "name": "Issue Guide",
  "description": "GitHub Issue",
  "version": "1.0",
  "icons": {
    "48": "images/icon48.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "images/icon_19.png"
    },
    "default_title": "Issue Guide",
    "default_popup": "./popup/index.html"
  },
  "author": "risacan",
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*/*/issues/new"
      ],
      "js": ["./lib/jquery-3.0.0.min.js", "./backend/index.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "tabs", "http://*/*", "https://*/*"
  ]
}
